{
  "compilerOptions": {
    "target": "ES2016",                        // modern JavaScript features
    "module": "commonjs",                      // Node.js modules
    "rootDir": "./src",                        // source folder
    "outDir": "./dist",                        // compiled JS output
    "baseUrl": "./src",                        // base path for imports
    "paths": { "@/*": ["*"] },                 // optional alias for imports
    "esModuleInterop": true,                   // for importing CommonJS modules
    "experimentalDecorators": true,            // if you plan to use decorators
    "emitDecoratorMetadata": true,             // required for some decorators
    "strict": true,                            // enable all strict type-checking
    "forceConsistentCasingInFileNames": true, // enforce consistent file naming
    "skipLibCheck": true                       // skip type checking of declaration files
  },
  "include": ["src/**/*.ts"],                  // include all source TS files
  "exclude": ["node_modules", "dist", "eslint.config.mjs"] // ignore build & config files
}